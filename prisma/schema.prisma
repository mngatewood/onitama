generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  first_name String
  last_name String?
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  games Game[]
}

model Card {
  id String @id @default(uuid())
  title String
  kanji String
  moves Int[]
  color String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  games Game[]
}

model Game {
  id String @id @default(uuid())
  board Json
  status String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  users User[]
  cards Card[]
}
